                if (!confirm('Are you sure you want to delete this shift?')) return;
                const id = $(this).closest('tr').data('id');
                $.post('/Shift/Delete', { id }, function (res) {
                    if (res.success) location.reload();
                    else alert('Delete failed');
                });
            });
        });
