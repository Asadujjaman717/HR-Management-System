<table class="table table-bordered">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Present</th>
            <th>Late</th>
            <th>Absent</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var summary in Model)
        {
            <tr>
                <td>@summary.Employee?.EmpName</td>
                <td>@summary.Present</td>
                <td>@summary.Late</td>
                <td>@summary.Absent</td>
            </tr>
        }
    </tbody>
